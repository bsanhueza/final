<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="far fa-calendar-alt"></i>
            <%= @event[:date] %> at <%= @event[:time] %>
        </h2>
        <p>
            <i class="fas fa-map-marker"></i> 
            <%= @event[:location] %>
        </p>

        <iframe
            width="600"
            height="450"
            frameborder="0" 
            style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw&q=<%= @lat_long %>&zoom=15" allowfullscreen>
        </iframe>

        <% for rsvp in @rsvps %>
            <% user = @users_table.where(:id => rsvp[:user_id]).to_a[0] %>
            <div class="media">
                <% if rsvp[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= user[:name] %></h5>
                    <%= rsvp[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <a href="/events/<%= @event[:id] %>/rsvps/new" class="btn btn-primary">RSVP now!</a>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>How many guests so far?</h3>
        <p><%= @count %></p>
    </div>
</div>