<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="far fa-calendar-alt"></i>
            <%= @event[:date] %> at <%= @event[:time] %>
        </h2>
        <p>
            <i class="fas fa-running"></i> 
            <%= @event[:capacity]/2 %>v<%= @event[:capacity]/2 %>
        </p>
        <p>
            <i class="fas fa-map-marker"></i> 
            <%= @event[:location] %>
        </p>
        <iframe
            width="600"
            height="450"
            frameborder="0" 
            style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw&q=<%= @lat_long %>&zoom=15" allowfullscreen>
        </iframe>
        <br><br>
        <% if @event[:bbq] %>
            <p><i class="fas fa-hamburger"></i> TBD</p>
        <% end %>
            <% for rsvp in @rsvps %>
            <% user = @users_table.where(:id => rsvp[:user_id]).to_a[0] %>
            <div class="media">
                <% if rsvp[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= user[:name] %></h5>
                    <%= rsvp[:comments] %>
                </div>
            </div>
        <% end %>
        <% if @current_user %>
            <p class="mt-5">
                <a href="/events/<%= @event[:id] %>/rsvps/new" class="btn btn-primary">RSVP</a>
            </p>
        <% else %>
            <p class="mt-5"><i class="fas fa-sign-in-alt"></i> Login to RSVP</p>
        <% end %>
    </div>
    <div class="col-sm-3">
        <h3>Attendees</h3>
        <p><%= @count %></p>
    </div>
</div>